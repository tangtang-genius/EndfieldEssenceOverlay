<!-- src/EndfieldEssenceOverlay/DebugImageWindow.xaml -->
<mah:MetroWindow x:Class="EndfieldEssenceOverlay.DebugImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        Title="캡처 이미지"
        Width="480" SizeToContent="Height"
        Topmost="True"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        TitleCharacterCasing="Normal">
    <StackPanel>
        <TextBlock Text="캡처 이미지 (원본)"
                   FontFamily="Consolas" FontSize="14"
                   Foreground="#F8F546" Background="#AA313739"
                   Padding="6,3"/>
        <Image x:Name="PreviewImage"
               MaxWidth="480" MaxHeight="400"
               Stretch="Uniform" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
    </StackPanel>
</mah:MetroWindow>
